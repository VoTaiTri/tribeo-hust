<% provide :title, "Home pages" %>

<% if user_signed_in? %>
  <% content_for :left_info do %>
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
  <% end %>
<% end %>

<% if user_signed_in? && current_user.is_admin? %>
  <h3 align="center">Phân công lớp học</h3>
  <% if @rejected.any? %>
    Có <b><%= @rejected.count %></b> lớp học đã phân công nhưng giảng viên không thể nhận lớp.<br />
    <%= link_to "Xem chi tiết", '#' %>
  <% else %>
    Tất cả lớp học đều trong tình trạng chờ xác nhận hoặc đã được giảng viên chấp nhận.
  <% end %>
<% elsif user_signed_in? %>
  <div class="col-md-12">
    <h3 align="center">Phân công lớp học</h3>
    <% if @asigned.any? %>
      Bạn có <b><%= @asigned.count %></b> lớp học mới được phân công.<br />
      <%= link_to "Xem chi tiết", user_courses_path(current_user) %>
    <% else %>
      Không có lớp học nào mới được phân công.
    <% end %>
    <hr />
  </div>
  <div class="col-md-12">
    <h3 align="center">Thống kê hoạt động</h3>
    <h4>Lớp học đảm nhiệm</h4>
    <% if @accepted.any? %>
      <div>Bạn đã xác nhận đảm nhiệm <b><%= @accepted.count %></b> lớp học.</div>
      <table class="table table-striped table-bordered">
        <tr>
          <th width="60px">Mã HP</th>
          <th width="65px">Mã lớp</th>
          <th width="320px">Tên lớp</th>
          <th width="60px">Số TC</th>
          <th width="76px">Đăng ký</th>
          <th>Ghi chú</th>
          <th width="80px">Kiểu lớp</th>
        </tr>
        <% @accepted.each do |course| %>
          <tr>
            <td><%= course.subject.subjectID %></td>
            <td><%= course.courseID %></td>
            <td><%= course.subject.name %></td>
            <td><%= course.subject.tc %></td>
            <td><%= course.enroll.to_s + "/" + course.max_enroll.to_s %></td>
            <td><%= course.note %></td>
            <td>
              <%if course.subject.species == "normal" %>
                LT+BT
              <% elsif course.subject.species == "project" %>
                Đồ án
              <% end %>
            </td>
          </tr>
         <% end %>
      </table>
    <% else %>
      Bạn chưa đảm nhiệm môn học nào trong học kỳ.
    <% end %>
  </div>
<% else %>
  <div class="center jumbotron">
    <h2>Hãy đăng nhập để sử dụng hệ thống</h2>
  </div>
<% end %>
