<% provide :title, "Edit account" %>
<h2 class="col-md-6 col-md-offset-2">Thay đổi thông tin tài khoản</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-2 well">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, multipart: true}) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label "Học hàm học vị" %>
      <%= f.select :degree, User::DEGREE, {}, {class: 'select-one form-control'} %></br>
      
      <%= f.label "Tên hiển thị" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.label "Mật khẩu" %> <i>(Để trống nếu không muốn thay đổi mật khẩu.)</i>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>

      <%= f.label "Xác nhận mật khẩu" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>

      <%= f.label "Mật khẩu hiện tại" %> <i>(Bạn cần nhập mật khẩu hiện tại.)</i>
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
      <hr />

      <%= f.label "Thay đổi hình ảnh đại diện" %>
      <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png',class: 'form-control' %>
      <hr />

      <%= f.submit "Cập nhật", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-1"></div>
  <div class="col-md-3 well">
    <label>Hình ảnh đại diện hiện tại</label>
    <% if resource.avatar.blank? %>
      <%= image_tag "default-user.png", size:"180x120", alt: "Current Cover", class: "img-polaroid" %>
    <% else %>
      <%= image_tag resource.avatar, size:"180x120", alt: "Current Cover", class: "img-polaroid" %>
    <% end %>
  </div>
</div>
