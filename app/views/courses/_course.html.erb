<tr>
  <td><%= course.subject.subjectID %></td>
  <td><%= course.courseID %></td>
  <td><%= link_to course.subject.name, course_path(course) %></td>
  <td><%= course.subject.tc %></td>
  <td><%= course.enroll.to_s + "/" +course.max_enroll.to_s %></td>
  <td>
    <%if course.subject.species == "normal" %>
      LT+BT
    <% elsif course.subject.species == "project" %>
      Do an
    <% end %>
  </td>
  <td id="lecturer_confirm_<%= course.id %>">
    <% if course.user_confirm == 'accepted' %>
      <div class="accepted-confirm">Đã nhận lớp<div>
    <% elsif course.user_confirm == 'rejected' %>
      <div class="rejected-confirm">Không nhận lớp<div>
    <% else %>
      <%= link_to "Nhận lớp", user_course_path(id: course.id, user_confirm: 'accepted'), method: :put, remote: true, data: {confirm: "Bạn thực sự muốn đảm nhiệm lớp học này?"} %>
      ||
      <%= link_to "Không nhận lớp", user_course_path(id: course.id, user_confirm: 'rejected'), method: :put, remote: true, data: {confirm: "Bạn thực sự không thể đảm nhiệm lớp học này?"} %>
    <% end %>
  </td>
</tr>
