<% provide :title, "List subjects" %>

<% if user_signed_in? %>
  <% content_for :left_info do %>
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
  <% end %>
<% end %>
<%= form_tag subjects_path, method: 'get', id: "subjects_search" do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
    
  <div class="col-md-12 well">
    <div class="col-md-6">
      <label>Tìm kiếm môn học</label>
    </div>
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: 'Tìm kiếm môn học bằng tên ...' %>
    </div>
  </div> 
  <div class="col-md-12">
    <div id="subjects_div"><%= render 'list_subjects' %></div>
  </div>
<% end %>

<% if params[:user_id].nil? %>
  <div><%= link_to "Danh sách môn học đảm nhiệm", user_subjects_path(@user) %></div>
  <div><%= link_to "Thay đổi môn học đảm nhiệm", edit_user_path(@user) %></div>
<% end %>
