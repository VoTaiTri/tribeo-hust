<%= form_for [:admin, @subject] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :subjectID, "Mã môn học" %><i>(ITxxxx)</i>
  <%= f.text_field :subjectID, class: 'form-control' %>

  <%= f.label :name, "Tên môn học" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :tc, "Số tín chỉ" %>
  <%= f.text_field :tc, class: 'form-control' %>

  <%= f.label :species, "Kiểu lớp" %>
  <%= f.select :species, options_for_select([['Lớp thường', 'normal'], ['Lớp thực hành', 'project']]), class: 'form-control' %>

  <%= f.label :lt, "Số giờ lý thuyết" %><i>(Nếu là lớp thường.)</i>
  <%= f.text_field :lt, class: 'form-control' %>

  <%= f.label :bt, "Số giờ bài tập" %><i>(Nếu là lớp thường.)</i>
  <%= f.text_field :bt, class: 'form-control' %>
  <hr />
  
  <%= f.submit @button, class: "btn btn-primary" %>
<% end %>
