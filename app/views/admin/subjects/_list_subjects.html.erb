<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<h2>Danh sách môn học</h2>

<% if @subjects.any? %>
  <table class="table table-striped table-bordered">
    <tr>
      <th style="width: 100px"><div class="col-md-12">Mã HP</div></th>
      <th><div class="col-md-12"><%= sortable "name", "Tên môn học" %></div></th>
      <th style="width: 40px"><div class="col-md-12">TC</div></th>
      <th style="width: 20px"><div class="col-md-12">LT</div></th>
      <th style="width: 20px"><div class="col-md-12">BT</div></th>
      <th style="width: 80px"><div class="col-md-12">Kiểu</div></th>
      <th style="width: 185px"><div class="col-md-12">Thao tác</div></th>
    </tr>
    <%= render @subjects %>
  </table>

  <%= will_paginate @subjects %>
<% else %>
  <h3 style="center">Không có môn học nào trong hệ thống</h3>
<% end %>
